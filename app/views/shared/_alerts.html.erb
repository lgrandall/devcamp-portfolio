<% if flash[:alert] %>
	<%= js add_gritter(flash[:alert], title: "Louis Randall Portfolio", sticky: false, time: 3000) %>
<% elsif flash[:error] %>
	<%= js add_gritter(flash[:error], title: "Louis Randall Portfolio", sticky: false, time: 3000) %>
<% else %>
	<%= js add_gritter(flash[:notice], title: "Louis Randall", sticky: false, time: 3000) %>
<% end %>